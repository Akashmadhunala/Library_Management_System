<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.UpdateBookController"
            prefHeight="400.0" prefWidth="600.0">
   <children>
      <Label layoutX="180.0" layoutY="35.0" text="Update Book Details">
         <font><Font size="23.0" /></font>
      </Label>

      <Label layoutX="180.0" layoutY="100.0" text="Title"/>
      <TextField fx:id="titleField" layoutX="300.0" layoutY="95.0"/>

      <Label layoutX="180.0" layoutY="140.0" text="Author"/>
      <TextField fx:id="authorField" layoutX="300.0" layoutY="135.0"/>

      <Label layoutX="180.0" layoutY="180.0" text="Category"/>
      <TextField fx:id="categoryField" layoutX="300.0" layoutY="175.0"/>

      <Label layoutX="180.0" layoutY="220.0" text="Status"/>
      <TextField fx:id="statusField" layoutX="300.0" layoutY="215.0"/>

      <Button layoutX="200.0" layoutY="280.0" text="Submit" onAction="#handleUpdateBook"/>
      <Button layoutX="320.0" layoutY="280.0" text="Back" onAction="#handleBack"/>
   </children>
</AnchorPane>
